<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="@dimen/dimen_120"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/dimen_100"
        android:src="@mipmap/image_main"/>

    <EditText
        android:id="@+id/et_user"
        style="@style/baseEditText"
        android:layout_width="@dimen/dimen_350"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25"
        android:hint="@string/txt_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_main_title"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        android:gravity="center_vertical"
        android:textSize="@dimen/ts_d_large"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/titleTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_login"
        style="@style/baseEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/dimen_50"
        android:layout_marginEnd="@dimen/dimen_50"
        android:paddingTop="@dimen/dimen_5"
        android:paddingBottom="@dimen/dimen_5"
        android:background="@drawable/drawable_button"
        android:text="@string/txt_login"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/dimen_25"
        app:layout_constraintTop_toBottomOf="@+id/et_user" />
</androidx.constraintlayout.widget.ConstraintLayout>